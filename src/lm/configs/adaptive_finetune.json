{
    "settings": {
        "model": "STORAGE_DIR/models/custom_roberta/adaptive_mlm",
        "save_path": "STORAGE_DIR/models/custom_roberta/adaptive_glue",
        "tokenizer": "STORAGE_DIR/models/custom_roberta/roberta_mlm",
        "dataset":"STORAGE_DIR/datasets/glue/mnli/mnli_train.pt", 
        "task": "mnli",
        "accelerate": true,
